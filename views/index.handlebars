<h1>Burgers App</h1>

<!-- Pass in data from server.js -->
<ul>
  {{#each burgers}}
  {{#unless this.consumed}}
  <li>
    <p class="label">{{this.burger_name}}
      <button id="{{this.id}}" class="eatBurger">Devour</button>
    </p>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
  {{#if this.consumed}}
  <li>
    <p class="label">{{this.burger_name}}
    </p>
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label>Burger:</label>
    <input type="text" id="burgerName">
  </div>

  <button type="submit">Add Burger</button>
</form>